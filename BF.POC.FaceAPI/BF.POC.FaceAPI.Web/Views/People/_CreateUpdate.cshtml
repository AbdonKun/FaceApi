@model BF.POC.FaceAPI.Web.Models.PersonViewModel

<div class="form-group">
    @Html.LabelFor(m => m.Name)
    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Name, null, new {@class = "text-danger"})
</div>

<div class="form-group">
    @Html.LabelFor(m => m.Lastname)
    @Html.TextBoxFor(m => m.Lastname, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Lastname, null, new { @class = "text-danger" })
</div>

<div class="form-group">
    @Html.LabelFor(m => m.GroupId)
    @Html.DropDownListFor(m => m.GroupId, (IEnumerable<SelectListItem>)Model.GroupList, Model.Id > 0 ? (object)new { @class = "form-control", @readonly = "readonly" } : (object)new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.GroupId, null, new { @class = "text-danger" })
</div>

<div class="form-group">
    <button type="submit" class="btn btn-primary">Save</button>
    @Html.ActionLink("Cancel", "Index", new { groupId = Request.Params["groupId"] }, new { @class = "btn btn-warning"})
</div>

@Html.ValidationSummary(true, null, new { @class = "text-danger" })
